{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch TensorBoard",
            "type": "shell",
            "command": "tensorboard",
            "args": ["--logdir", "tensorboard/"],
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Visualize",
            "type": "shell",
            "command": "python",
            "args": ["visualize_ai_atc.py"],
            "options": {
                "env": {
                    "TF_CPP_MIN_LOG_LEVEL": "2",
                    "TF_FORCE_GPU_ALLOW_GROWTH": "true",
                    "CUDA_VISIBLE_DEVICES": "0"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Train AI ATC",
            "type": "shell",
            "command": "python",
            "args": ["train_ai_atc.py"],
            "options": {
                "env": {
                    "TF_CPP_MIN_LOG_LEVEL": "2",
                    "TF_FORCE_GPU_ALLOW_GROWTH": "true",
                    "CUDA_VISIBLE_DEVICES": "0"
                }
            },
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Train and Monitor",
            "dependsOn": ["Train AI ATC", "Launch TensorBoard"],
            "dependsOrder": "parallel",
            "group": "build"
        }
    ]
}