{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AI-ATC: Debug Training (GPU)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_ai_atc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "Launch TensorBoard",
            "postLaunchTask": "Run Visualize",
            "env": {
                "TF_CPP_MIN_LOG_LEVEL": "2",
                "TF_FORCE_GPU_ALLOW_GROWTH": "true",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "AI-ATC: Visualize",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/visualize_ai_atc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "TF_CPP_MIN_LOG_LEVEL": "2",
                "TF_FORCE_GPU_ALLOW_GROWTH": "true",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "AI-ATC: Run Web App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/AIATC.Web",
            "program": "${workspaceFolder}/src/AIATC.Web/bin/Debug/net10.0/AIATC.Web.dll",
            "launchBrowser": true,
            "applicationUrl": "https://localhost:5001",
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}",
            "browser": "chrome"
        }
    ]
}