{
  "name": "AI-ATC Dev Container",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "runArgs": [
    "--gpus=all"
  ]
}
