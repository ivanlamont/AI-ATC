@page "/challenge"
@using AIATC.Domain.Services
@using AIATC.Domain.Models
@using AIATC.Domain.Models.Scenarios
@using System.Timers

@inject ChallengeModeService ChallengeService
@inject ILogger<ChallengeMode> Logger

<div class="challenge-container">
    <!-- Header -->
    <div class="challenge-header">
        <h1>Challenge Mode: AI vs Human</h1>
        <div class="challenge-controls">
            <button @onclick="() => StartChallenge()" disabled="@(ChallengeService.State != ChallengeState.Ready)">
                Start Challenge
            </button>
            <button @onclick="() => PauseChallenge()" disabled="@(ChallengeService.State != ChallengeState.Running)">
                Pause
            </button>
            <button @onclick="() => ResumeChallenge()" disabled="@(ChallengeService.State != ChallengeState.Paused)">
                Resume
            </button>
            <button @onclick="() => EndChallenge()" disabled="@(ChallengeService.State != ChallengeState.Running && ChallengeService.State != ChallengeState.Paused)">
                End Challenge
            </button>
        </div>
        <div class="challenge-info">
            <span>Time: @ChallengeService.SimulationTimeSeconds.ToString("F1")s</span>
            <span>Speed: @ChallengeService.TimeMultiplier.ToString("F1")x</span>
            <select @onchange="ChangeTimeScale">
                <option value="0.5">0.5x</option>
                <option value="1" selected>1x</option>
                <option value="2">2x</option>
                <option value="4">4x</option>
            </select>
            <label>
                <input type="checkbox" @bind="ChallengeService.ShowAIPredictions" />
                Show AI Predictions
            </label>
        </div>
    </div>

    <!-- Split Screen -->
    <div class="challenge-split-screen">
        <!-- User Side (Left) -->
        <div class="challenge-side user-side">
            <div class="side-header">
                <h2>YOUR CONTROL</h2>
                <div class="score-display">
                    <div class="score-label">Your Score</div>
                    <div class="score-value">@(CurrentComparison?.UserScore?.TotalScore.ToString("F0") ?? "0")</div>
                </div>
            </div>

            <div class="radar-container">
                <canvas @ref="userRadarCanvas" width="512" height="512"></canvas>
            </div>

            <div class="command-section">
                <div class="command-input-area">
                    <input type="text"
                           @bind="userCommandInput"
                           @onkeydown="HandleUserCommandKeyPress"
                           placeholder="Enter ATC command (e.g., 'turn right heading 270')"
                           disabled="@(ChallengeService.State != ChallengeState.Running)" />
                    <button @onclick="() => SubmitUserCommand()"
                            disabled="@(string.IsNullOrEmpty(userCommandInput) || ChallengeService.State != ChallengeState.Running)">
                        Send
                    </button>
                </div>

                <div class="command-history">
                    <h3>Command History (@(ChallengeService.UserCommandHistory.Count))</h3>
                    <div class="history-list">
                        @foreach (var cmd in ChallengeService.UserCommandHistory.OrderByDescending(c => c.Timestamp).Take(10))
                        {
                            <div class="history-entry human-command">
                                <span class="timestamp">@cmd.Timestamp.ToString("F1")s</span>
                                <span class="callsign">@cmd.TargetCallsign</span>
                                <span class="command">@cmd.CommandText</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Score Comparison (Center) -->
        <div class="challenge-comparison">
            <div class="comparison-header">Score Comparison</div>

            @if (CurrentComparison != null)
            {
                <div class="score-row">
                    <div class="score-item human-score">
                        <div class="score-title">Human</div>
                        <div class="score-big">@CurrentComparison.UserScore.TotalScore.ToString("F0")</div>
                        <div class="score-detail">
                            <div>Aircraft: @CurrentComparison.UserAircraftCount</div>
                            <div>Commands: @CurrentComparison.UserCommandCount</div>
                            <div>Violations: @CurrentComparison.UserScore.SeparationViolations.Count</div>
                        </div>
                    </div>

                    <div class="comparison-divider">
                        <div class="vs-text">VS</div>
                        @if (ChallengeService.State == ChallengeState.Completed)
                        {
                            <div class="winner-badge">
                                @if (GetWinner() == "Human")
                                {
                                    <span class="winner human">YOU WIN!</span>
                                }
                                else if (GetWinner() == "AI")
                                {
                                    <span class="winner ai">AI WINS!</span>
                                }
                                else
                                {
                                    <span class="winner tie">TIE</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="score-item ai-score">
                        <div class="score-title">AI Agent</div>
                        <div class="score-big">@CurrentComparison.AiScore.TotalScore.ToString("F0")</div>
                        <div class="score-detail">
                            <div>Aircraft: @CurrentComparison.AiAircraftCount</div>
                            <div>Commands: @CurrentComparison.AiCommandCount</div>
                            <div>Violations: @CurrentComparison.AiScore.SeparationViolations.Count</div>
                        </div>
                    </div>
                </div>

                <div class="stats-comparison">
                    <div class="stat-row">
                        <span>Efficiency</span>
                        <span>@(CurrentComparison.UserScore.Statistics.CommandCount > 0 ? (CurrentComparison.UserScore.Statistics.LandingCount / (float)CurrentComparison.UserScore.Statistics.CommandCount).ToString("F2") : "0.00")</span>
                        <span>vs</span>
                        <span>@(CurrentComparison.AiScore.Statistics.CommandCount > 0 ? (CurrentComparison.AiScore.Statistics.LandingCount / (float)CurrentComparison.AiScore.Statistics.CommandCount).ToString("F2") : "0.00")</span>
                    </div>
                    <div class="stat-row">
                        <span>Safety Rating</span>
                        <span>@CurrentComparison.UserScore.SafetyRating.ToString("F0")%</span>
                        <span>vs</span>
                        <span>@CurrentComparison.AiScore.SafetyRating.ToString("F0")%</span>
                    </div>
                </div>
            }
        </div>

        <!-- AI Side (Right) -->
        <div class="challenge-side ai-side">
            <div class="side-header">
                <h2>AI CONTROL</h2>
                <div class="score-display">
                    <div class="score-label">AI Score</div>
                    <div class="score-value">@(CurrentComparison?.AiScore?.TotalScore.ToString("F0") ?? "0")</div>
                </div>
            </div>

            <div class="radar-container">
                <canvas @ref="aiRadarCanvas" width="512" height="512"></canvas>
            </div>

            <div class="command-section">
                <div class="ai-info">
                    <p>AI Agent is making decisions based on game state analysis.</p>
                </div>

                <div class="command-history">
                    <h3>AI Commands (@(ChallengeService.AiCommandHistory.Count))</h3>
                    <div class="history-list">
                        @foreach (var cmd in ChallengeService.AiCommandHistory.OrderByDescending(c => c.Timestamp).Take(10))
                        {
                            <div class="history-entry ai-command">
                                <span class="timestamp">@cmd.Timestamp.ToString("F1")s</span>
                                <span class="callsign">@cmd.TargetCallsign</span>
                                <span class="command">@cmd.CommandText</span>
                                <span class="confidence" title="AI Confidence">@cmd.Confidence.ToString("P0")</span>
                            </div>
                        }
                    </div>
                </div>

                @if (ChallengeService.ShowAIPredictions && ChallengeService.AIPredictions.Count > 0)
                {
                    <div class="predictions-section">
                        <h3>AI Predictions</h3>
                        <div class="predictions-list">
                            @foreach (var pred in ChallengeService.AIPredictions.OrderByDescending(p => p.Timestamp).Take(5))
                            {
                                <div class="prediction-entry">
                                    <span class="callsign">@pred.Callsign</span>
                                    <span class="prediction">@pred.Command</span>
                                    <span class="confidence">@pred.Confidence.ToString("P0")</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private Timer updateTimer;
    private ElementReference userRadarCanvas;
    private ElementReference aiRadarCanvas;
    private string userCommandInput = "";
    private ChallengeComparison CurrentComparison;
    private AircraftModel selectedUserAircraft;

    protected override async Task OnInitializedAsync()
    {
        // Initialize challenge mode
        await ChallengeService.InitializeChallengeAsync("demo-scenario", Difficulty.Intermediate);

        // Start update timer
        updateTimer = new Timer(100); // Update every 100ms (10 Hz)
        updateTimer.Elapsed += async (s, e) =>
        {
            ChallengeService.UpdateChallenge(0.1f); // 100ms delta
            CurrentComparison = ChallengeService.GetCurrentComparison();
            await InvokeAsync(StateHasChanged);
        };
        updateTimer.Start();
    }

    private void StartChallenge()
    {
        ChallengeService.StartChallenge();
        StateHasChanged();
    }

    private void PauseChallenge()
    {
        ChallengeService.PauseChallenge();
        StateHasChanged();
    }

    private void ResumeChallenge()
    {
        ChallengeService.ResumeChallenge();
        StateHasChanged();
    }

    private void EndChallenge()
    {
        ChallengeService.EndChallenge();
        StateHasChanged();
    }

    private void ChangeTimeScale(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value.ToString(), out var scale))
        {
            ChallengeService.TimeMultiplier = scale;
        }
    }

    private void HandleUserCommandKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            SubmitUserCommand();
        }
    }

    private void SubmitUserCommand()
    {
        if (!string.IsNullOrEmpty(userCommandInput))
        {
            if (selectedUserAircraft != null)
            {
                ChallengeService.SubmitUserCommand(userCommandInput, selectedUserAircraft);
                userCommandInput = "";
            }
            else
            {
                Logger.LogWarning("No aircraft selected");
            }
        }
    }

    private string GetWinner()
    {
        var result = ChallengeService.DetermineWinner();
        return result.Winner;
    }

    public void Dispose()
    {
        updateTimer?.Dispose();
    }
}

